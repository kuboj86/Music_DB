@page
@model MusicDB.Pages.Jason.IndexModel
@section Styles {
    <link href="~/css/jason.css" rel="stylesheet" type="text/css" />
}
@{
    ViewData["Title"] = "Index";
}
<div>
<h1 class="display-4">Jason's Song View</h1>

<p>
        <a asp-page="Create">Add Song</a>

</p>
<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name:
            <input type="text" name="SearchString" value="@Model.SearchString" />
            <input type="submit" value="Search" class="btn btn-primary" /> 
        </p>
    </div>
</form>
<div class="table-responsive">
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>
                    <a asp-page="./Index" asp-route-sort="@Model.SongTitleSort">
                        @Html.DisplayNameFor(model => model.Songs[0].SongTitle)
                    </a>
                </th>
                <th>
                    <a asp-page="./Index" asp-route-sort="@Model.ArtistNameSort">
                        @Html.DisplayNameFor(model => model.Songs[0].Artist)
                    </a>
                </th>
                <th>
                    <a asp-page="./Index" asp-route-sort="@Model.AlbumNameSort">
                        @Html.DisplayNameFor(model => model.Songs[0].Album)
                    </a>

                </th>
                <th>
                    <a asp-page="./Index" asp-route-sort="@Model.GenreSort">
                        @Html.DisplayNameFor(model => model.Songs[0].Genre)
                    </a>

                </th>
                <th>
                        @Html.DisplayNameFor(model => model.Songs[0].SongLength)

                </th>
                <th>
                        @Html.DisplayNameFor(model => model.Songs[0].ReleaseDate)

                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Songs)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SongTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Artist)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Album)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SongLength)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
</div>

