@page
@model MusicDB.Pages.Robert.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<head>
    <link rel="stylesheet" href="~/css/robert.css">
</head>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Song</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Song.SongTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Song.SongTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Song.Artist)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Song.Artist)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Song.Album)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Song.Album)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Song.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Song.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Song.SongLength)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Song.SongLength)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Song.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Song.ReleaseDate)
        </dd>
    </dl>
    
    <form method="post">
        <a asp-page="./Delete" asp-route-id="@ViewData["prevId"]">Previous</a>
        <input type="hidden" asp-for="Song.Id" />
        <input type="submit" value="Delete" class="btn" />
        <a asp-page="./Index">Return</a>
        <a asp-page="./Delete" asp-route-id="@ViewData["nextId"]">Next</a>
    </form>
</div>
