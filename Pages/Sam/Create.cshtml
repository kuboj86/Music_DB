@page
@model MusicDB.Pages.Sam.CreateModel
@section Styles{
    <link rel="stylesheet" href="~/css/sam.css">
    <style type="text/css">
        body {
            background-image: url('/Images/vinyl-2573856_1280.jpg');
            background-repeat: no-repeat;
            background-size: cover;
            margin: 0;
        }

        a {
            padding: 3px;
            background: black;
            text-decoration: none;
            color: goldenrod;
            padding: 2px;
        }
        h4{
            color:goldenrod;
            text-shadow: 2px 2px black;
        }

        h1{
            text-shadow: 2px 2px black;

        }

        #CreateButton{
            color:goldenrod;
            background-color: black;
        }
    </style>

}
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Song</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Song.SongTitle" class="control-label bg-black bg-opacity-75"></label>
                <input asp-for="Song.SongTitle" class="form-control" />
                <span asp-validation-for="Song.SongTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song.Artist" class="control-label bg-black bg-opacity-75"></label>
                <input asp-for="Song.Artist" class="form-control" />
                <span asp-validation-for="Song.Artist" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song.Album" class="control-label bg-black bg-opacity-75"></label>
                <input asp-for="Song.Album" class="form-control" />
                <span asp-validation-for="Song.Album" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song.Genre" class="control-label bg-black bg-opacity-75"></label>
                <input asp-for="Song.Genre" class="form-control" />
                <span asp-validation-for="Song.Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song.SongLength" class="control-label bg-black bg-opacity-75"></label>
                <input asp-for="Song.SongLength" class="form-control" />
                <span asp-validation-for="Song.SongLength" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song.ReleaseDate" class="control-label bg-black bg-opacity-75"></label>
                <input asp-for="Song.ReleaseDate" class="form-control" />
                <span asp-validation-for="Song.ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group p-1">
                <input id="CreateButton" type="submit" value="Create" class="btn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
