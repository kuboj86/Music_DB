@model MusicDB.Pages.Sam.DetailsModel
@section Styles{
    <link rel="stylesheet" href="~/css/sam.css">
    <style type="text/css">
        body {
            background-image: url('/Images/vinyl-2573856_1280.jpg');
            background-repeat: no-repeat;
            background-size: cover;
            background-color: black;
            color: goldenrod;
            margin: 0;
        }

